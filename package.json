{
  "name": "yomitoku-server",
  "version": "0.1.0",
  "description": "Backend proxy service for the Yomitoku Chrome extension - secure API key management and request proxying to Gemini 3 API",
  "type": "module",
  "main": "build/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node build/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "yomitoku",
    "japanese",
    "gemini",
    "proxy",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@google/genai": "^1.30.0",
    "fastify": "^5.2.0",
    "lru-cache": "^11.2.2",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
