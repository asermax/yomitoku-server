# Gemini API Configuration
# REQUIRED: Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-api-key-here
# API version to use (default: v1)
GEMINI_API_VERSION=v1

# Server Configuration
# Port the server will listen on (default: 3000)
PORT=3000
# Host address to bind to (default: 0.0.0.0 for all interfaces)
HOST=0.0.0.0
# Environment: development | production | test (default: development)
NODE_ENV=development

# Rate Limiting
# Time window for rate limiting in milliseconds (default: 3600000 = 1 hour)
RATE_LIMIT_WINDOW_MS=3600000
# Maximum number of requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Logging
# Log level: fatal | error | warn | info | debug | trace (default: info)
LOG_LEVEL=info

# CORS Configuration
# REQUIRED IN PRODUCTION: Chrome extension ID that can access this server
# Get this from Chrome Web Store after publishing your extension
CHROME_EXTENSION_ID=your-extension-id-here

# Image Processing
# Maximum image size in bytes (default: 5242880 = 5MB)
MAX_IMAGE_SIZE=5242880

# Caching
# Cache time-to-live in seconds (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600
# Maximum number of cache entries (default: 1000)
CACHE_MAX_ENTRIES=1000
